{
  "name": "triggerskit-monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zydeer/triggerskit.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "^1.2.18",
    "bumpp": "^10.2.0",
    "bunup": "^0.8.64",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "bugs": {
    "url": "https://github.com/zydeer/triggerskit/issues"
  },
  "homepage": "https://github.com/zydeer/triggerskit#readme",
  "license": "MIT",
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "private": true,
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch --clean=false",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "tsc": "tsc --noEmit",
    "test": "bun test",
    "test:dev": "bun --filter './tests' dev",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "release": "bumpp -r --commit --push --tag",
    "publish:ci": "bun run --filter './packages/**' publish:ci",
    "prepare": "simple-git-hooks",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run tsc && bun run format && npx --no -- commitlint --edit $1"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "tests"
  ]
}
