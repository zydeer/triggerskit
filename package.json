{
  "name": "triggerskit-monorepo",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zydeer/triggerskit.git"
  },
  "bugs": {
    "url": "https://github.com/zydeer/triggerskit/issues"
  },
  "homepage": "https://github.com/zydeer/triggerskit#readme",
  "license": "MIT",
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch --no-clean",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "tsc": "tsc --noEmit",
    "test": "bun test",
    "test:dev": "bun --filter './tests' dev",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "release": "bumpp -r --commit --push --tag",
    "prepare": "simple-git-hooks",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint"
  },
  "workspaces": [
    "packages/*",
    "tests"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "^1.2.23",
    "bumpp": "^10.3.1",
    "bunup": "^0.14.20",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}
