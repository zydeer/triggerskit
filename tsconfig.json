{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "@triggerskit/core": ["./packages/core/src/index.ts"],
      "@triggerskit/telegram": ["./packages/telegram/src/index.ts"],
      "@triggerskit/github": ["./packages/github/src/index.ts"],
      "triggerskit": ["./packages/triggerskit/src/index.ts"],
      "triggerskit/storage": ["./packages/triggerskit/src/storage/index.ts"]
    }
  },
  "include": ["packages/**/src/**/*"],
  "exclude": ["node_modules", "dist", "bunup.config.ts"]
}
